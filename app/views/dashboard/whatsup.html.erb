<div class="row">
  <div class="d-flex">
    <h4 class="text-primary">
      <%= image_tag("dashboard_logo.svg", class: "img-fluid") %>
      &emsp;
      Oggi:
      &emsp; 
      <%= l(Date.today, format: "%A %d %B %Y") %>
    </h4>
  </div>
</div>
<div class="row">
  <hr/>
  <br/>
</div>
<div class="row">
  <div class="col-4">
    <div class="card bg-white border-light shadow">
      <div class="card-header bg-white test-primary">
        <%= image_tag("dashboard_holidays_logo.svg", class: "img-fluid") %>
      </div>
      <div class="card-body">
        <ul class="list-group bg-white border-white">
          <% @holidays.each do |holiday| %>
            <% if Date.today.between?(startholiday(holiday), endholiday(holiday))%>
              <li class="list-group-item bg-white border-white">
                <strong>
                  <%= link_to holiday_path(holiday), "data-controller": "turbo", "data-bs-toggle": "tooltip", "title": "Visualizza Dettaglio" do %>
                    <i class='fas fa-user-circle'></i>
                    &nbsp;
                    <%= "#{holiday.user.last_name} #{holiday.user.first_name}" %>
                  <% end %>
                </strong>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card bg-white border-light shadow">
      <div class="card-header bg-white test-primary">
        <%= image_tag("dashboard_hourly_holidays_logo.svg", class: "img-fluid") %>
