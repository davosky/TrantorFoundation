                  <i class='fas fa-user-circle'></i>
                  &nbsp;
                  <%= "#{hourly_holiday.user.last_name} #{hourly_holiday.user.first_name}" %>
                <% end %>
              </strong>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card bg-white border-light shadow">
