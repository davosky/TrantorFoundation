<div class="d-flex align-items-center justify-content-center">
  <div class="col-6 text-center">
    <div class="card border-primary bg-primary shadow">
      <div class="card-body">
        <%= image_tag "login_logo.svg", class: "img-fluid", alt: "logo.main.svg" %>
        <br/>
        &emsp;
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mx-3">
            <%= f.label :username, class: "form-label text-white" do %>
              <i class="fa-solid fa-user"></i>&emsp;Nome Utente
            <% end %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :username, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group mx-3">
            <%= f.label :password, class: "form-label text-white" do %>
              <i class="fa-solid fa-key"></i>&emsp;Password
            <% end %>
            <div class="form-group">
              <div class="input-group">
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>
          </div>
          <br/>
          <div class="d-grid mx-3 mb-5">
            <%= button_tag(type: "submit", class: "btn btn-outline-light") do %>
              <strong>
                <i class="fas fa-sign-in-alt"></i>&ensp;ACCEDI
              </strong>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
