<%= turbo_frame_tag :remote_modal, target: :_top do %>
  <div class="modal fade" data-controller="modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header mb-5">
          <div class="modal-title">
            <%= image_tag("holidays_form_icon.svg", class: "img-fluid") %>
          </div>
          <a class="modal-header-link" data-bs-dismiss="modal" aria-label="Close">
            <i class="fa-solid fa-xmark"></i>
          </a>
        </div>
        <div class="modal-body mb-5">
          <div class="col-8 offset-2">
            <div id="<%= dom_id @hourly_holiday %>" class="scaffold_record">
              <div class="row">
                <div class="col">
                  <h3 class="text-primary">
                    <%= hourly_holiday_full_user(@hourly_holiday) %>
                  </h3>
                  <hr class="bg-primary"/>
                  <h5 class="text-primary">
                    Il giorno:
                    &emsp;
                    <strong>
                      <%= l(@hourly_holiday.start_time, format: "%A %d %B %Y") %>
                    </strong>
                    &emsp;
                    dalle ore:
                    <strong>
                      <%= l(@hourly_holiday.start_time, format: "%H %M") %>
                    </strong>
                    &emsp;
                    alle ore:
                    &emsp;
                    <strong>
                      <%= l(@hourly_holiday.end_time, format: "%H %M") %>
                    </strong>
                    <hr/>
                    Note:
                    <br/>
                    <br/>
                    <span class="text-dark">
                      <%= @hourly_holiday.note %>
                    </span>
                  </h5>
                  <hr class="bg-primary"/>
                  <br/>
                  <span class="float-start">
                    <small class="text-secondary">
                      Creato da:
                      &nbsp;
                      <%= @hourly_holiday.creator %>
                      &emsp;
                      Data Creazione:
                      &nbsp;
                      <%= l(@hourly_holiday.created_at, format: "%A %d %B %Y") %>
                    </small>
                  </span>
                  <br/>
                  <% if @hourly_holiday.update_date.present? %>
                    <span class="float-start">
                      <small class="text-secondary">
                        Aggiornato da:
                        &nbsp;
                        <%= @hourly_holiday.updater %>
                        &emsp;
                        Data Ultimo Aggiornamento:
                        &nbsp;
                        <%= l(@hourly_holiday.update_date, format: "%A %d %B %Y") %>
                      </small>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
