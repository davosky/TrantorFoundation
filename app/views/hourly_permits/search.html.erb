<div class="row mb-4">
  <div class="col-12">
    <%= image_tag("hourly_permits_logo.svg", class: "img-fluid") %>
  </div>
</div>
<%= search_form_for @q, id: "search-form", url: search_hourly_permits_path do |form| %>
  <div class="row">
    <div class="col-4">
      <div class="input-group mb-2">
        <div class="input-group-search">
          <i class="fa-solid fa-calendar-day"></i>
          &nbsp;<span>Data Inizio</span>
        </div>
        <%= form.date_field :start_time_gteq, class: "form-control" %>
      </div>
    </div>
    <div class="col-4">
      <div class="input-group mb-2">
        <div class="input-group-search">
          <i class="fa-solid fa-calendar-day"></i>
          &nbsp;<span>Data Fine</span>
        </div>
        <%= form.date_field :start_time_lteq, class: "form-control" %>
      </div>
    </div>
    <div class="col-4">
      <span class="float-start">
        <div class="input-group mb-2">
          <div class="input-group-search">
            <i class="fa-solid fa-user-circle"></i>
            &nbsp;<span>Utente</span>
          </div>
          <% if god? %>
            <%= form.collection_select(:user_id_eq, User.order("last_name ASC"), :id, :user_name_full, { :include_blank => true }, { :class => "form-control" }) %>
          <% elsif manager? %>
            <%= form.collection_select :user_id_eq, User.order("last_name ASC").where(province: current_user.province, region: current_user.region), :id, :user_name_full, { :include_blank => true }, { :class => "form-control" } %>
          <% else %>
          <% end %>
        </div>
      </span>
      <span class="float-end pe-2">
        <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          <i class="fa-solid fa-magnifying-glass"></i>
          &emsp;
          <strong>
            Cerca
          </strong>
        <% end %>
        &nbsp;
      </span>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-12">
    <br/>
    <table class="table table-hover text-primary">
      <thead>
        <th>
          <i class="fa-solid fa-user-circle"></i>
          &nbsp;
          Utente
        </th>
        <th>
          <i class="fa-solid fa-calendar-day"></i>
          &nbsp;
          Data Ora Inizio
        </th>
        <th>
          <i class="fa-solid fa-calendar-day"></i>
          &nbsp;
          Data Ora Fine
        </th>
        <th>
          <i class="fa-solid fa-calendar-days"></i>
          &nbsp;
          Durata
        </th>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @hourly_permits.each do |hourly_permit| %>
          <% if hourly_permit.user.color? %> 
            <tr style="background-color: <%= "#{hourly_permit.user.color}" %>">
          <% else %>
            <tr>
          <% end %>
            <td>
              <%= link_to hourly_permit_path(hourly_permit), "data-controller": "turbo", "data-bs-toggle": "tooltip", "title": "Visualizza Dettaglio" do %>
                <%= "#{hourly_permit.user.first_name} #{hourly_permit.user.last_name}" %>
              <% end %>
            </td>
            <td>
              <%= l(hourly_permit.start_time, format: "%A %d %B %Y dalle ore: %H:%M") %>
            </td>
            <td>
              <%= l(hourly_permit.end_time, format: "%A %d %B %Y alle ore: %H:%M") %>
            </td>
            <td>
              <strong class='text-primary'>
                <%= hourly_permit_duration(hourly_permit).round %>
                &emsp;
                <% unless hourly_permit_duration(hourly_permit) > 1 %>
                  ore
                <% else %>
                  ore
                <% end %>
              </strong>
            </td>
          </tr>
          <% @total = @total + hourly_permit_duration(hourly_permit).round %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <h5>
      <span class="float-end badge bg-primary text-white p-2">
        <strong>
          Totale ore ferie:
          &emsp;
          <%= @total %>
        </strong>
      </span>
    </h5>
  </div>
</div>
