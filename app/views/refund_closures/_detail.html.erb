                        &nbsp;
                        <i class='far fa-file-pdf'></i>
                        &emsp;
                        Ricevute (4)
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="col-4">
                  <% unless !@refund_closure.refund_receipt_3.attached? %>
                    <div class="d-grid gap-2">
                      <%= link_to @refund_closure.refund_receipt_3, class: 'btn btn-primary mb-3', target: '_blank'  do %>
                        <i class="fa-solid fa-download"></i>
                        &nbsp;
                        <i class='far fa-file-pdf'></i>
                        &emsp;
                        Ricevute (3)
                      <% end %>
                    </div>
                  <% end %>
                  <% unless !@refund_closure.refund_receipt_6.attached? %>
                    <div class="d-grid gap-2">
                      <%= link_to @refund_closure.refund_receipt_6, class: 'btn btn-primary mb-3', target: '_blank'  do %>
                        <i class="fa-solid fa-download"></i>
                        &nbsp;
                        <i class='far fa-file-pdf'></i>
                        &emsp;
                        Ricevute (4)
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <br/>
                <hr/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
