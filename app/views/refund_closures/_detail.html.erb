                        <i class="fa-solid fa-download"></i>
                        &nbsp;
                        <i class='far fa-file-pdf'></i>
                        &emsp;
                        Ricevute (4)
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="col-4">
                  <% unless !@refund_closure.refund_receipt_2.attached? %>
                    <div class="d-grid gap-2">
                      <%= link_to @refund_closure.refund_receipt_2, class: 'btn btn-primary mb-3', target: '_blank'  do %>
                        <i class="fa-solid fa-download"></i>
                        &nbsp;
                        <i class='far fa-file-pdf'></i>
                        &emsp;
