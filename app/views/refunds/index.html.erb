<div class="col-3">
  <div class="d-grid mx-3">
    <%= image_tag("refunds_logo.svg", class: "img-fluid") %>
    <%= link_to new_refund_path, "data-controller": "turbo", class: "btn btn-primary btn-sm shadow mb-3" do %>
      <i class="fa-solid fa-plus"></i>
      &nbsp;
      <i class="fa-solid fa-wallet"></i>
      &nbsp;
      Nuovo Rimborso
    <% end %>
  </div>
</div>
<div class="col-9">
  <table class="table table-hover table-striped">
    <thead class="text-primary">
      <th></th>
      <th>
        <i class="fa-solid fa-calendar-day"></i>
        &nbsp;Data Partenza
      </th>
      <th>
        <i class="fa-solid fa-location-dot"></i>
        &nbsp;Luogo
      </th>
      <th>
        <i class="fa-solid fa-building"></i>
        &nbsp;Struttura
      </th>
      <th colspan=2></th>
    </thead>
    <tbody>
      <% @refunds.each do |refund| %>
        <tr>
          <td>
            <%= link_to refund_path(refund), 
            "data-controller": "turbo", 
            class: "btn btn-outline-primary btn-sm",
            "data-bs-toggle": "tooltip", 
            "title": "Visualizza Dettagli" do %>
              <%= refund.refund_number %>
            <% end %>
          </td>
          <td>
            <%= l(refund.departure_date) %>
          </td>
          <td>
            <%= refund.place_fr %>
          </td>
          <td>
            <%= refund.structure_fr %>
          </td>
          <td>
            <%= link_to edit_refund_path(refund), 
            "data-controller": "turbo", 
            "data-bs-toggle": "tooltip", 
            "title": "Modifica il Record Corrente", class: "edit-link" do %>
              <i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          </td>
          <td>
            <%= link_to refund_path(refund),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Sicuri di voler eliminare il record corrente?", 
            "data-bs-toggle": "tooltip", 
            "title": "Elimina il Record Corrente", class: "delete-link" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= paginate @refunds %>
</div>
