<%= form_with(model: road) do |form| %>
  <% if road.errors.any? %>
    <div style="color: red">
      <h4>
        Errore!&emsp;Non posso salvare per i seguenti motivi:
      </h4>
      <ul>
        <% road.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-route"></i>
      &nbsp;&nbsp;
      <%= form.label :name %>
    </span>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-ruler-horizontal"></i>
      &nbsp;&nbsp;
      <%= form.label :road_lenght %>
    </span>
    <%= form.number_field :road_lenght, step: 0.1, class: 'form-control' %>
  </div>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-credit-card"></i>
      &nbsp;&nbsp;
      <%= form.label :highway_cost %>
    </span>
    <%= form.number_field :highway_cost, step: 0.1, class: 'form-control' %>
  </div>
  <div class="input-group mb-2">
    <span class="input-group-text">
      <i class="fa-solid fa-arrow-up-9-1"></i>
      &nbsp;&nbsp;
      <%= form.label :position %>
    </span>
    <%= form.number_field :position, class: 'form-control' %>
  </div>
  <div class="d-grid">
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>
