<%= form_with(model: veichle) do |form| %>
  <% if veichle.errors.any? %>
    <div style="color: red">
      <h4>
        Errore!&emsp;Non posso salvare per i seguenti motivi:
      </h4>
      <ul>
        <% veichle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-car"></i>
      &nbsp;&nbsp;
      <%= form.label :name %>
    </span>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-industry"></i>
      &nbsp;&nbsp;
      <%= form.label :producer %>
    </span>
    <%= form.text_field :producer, class: 'form-control' %>
  </div>
  <div class="input-group mb-1">
    <span class="input-group-text">
      <i class="fa-solid fa-credit-card"></i>
      &nbsp;&nbsp;
      <%= form.label :license_plate %>
    </span>
    <%= form.text_field :license_plate, class: 'form-control' %>
  </div>
  <div class="input-group mb-2">
    <span class="input-group-text">
      <i class="fa-solid fa-arrow-up-9-1"></i>
      &nbsp;&nbsp;
      <%= form.label :position %>
    </span>
    <%= form.number_field :position, class: 'form-control' %>
  </div>
  <div class="d-grid">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
